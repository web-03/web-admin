<!DOCTYPE html>
<html lang="en" data-textdirection="ltr" class="loading">

<head>
    <title>Thêm nhân viên</title>
    <%  include ./../emlements/css %>
</head>

<body>
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="horz-layout-card-center">
                            Thêm nhân viên
                    </h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block">
                        <form method="POST" commandName="customer" accept-charset="UTF-8" action="create"
                            cssClass="form form-horizontal">
                            <div class="form-body">

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="fullName">Họ và tên<span
                                            class="text-danger">(*)</span></label>
                                    <div class="col-md-9">
                                        <input path="fullName" placeholder="Họ và tên" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="phone">Số điện thoại<span
                                            class="text-danger">(*)</span></label>
                                    <div class="col-md-9">
                                        <input path="phone" placeholder="Số điện thoại" class="form-control" />
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="email">Email<span
                                            class="text-danger">(*)</span></label>
                                    <div class="col-md-9">
                                        <input path="email" placeholder="Email" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="birthplace">Chỗ ở hiện tại</label>
                                    <div class="col-md-9">
                                        <input path="birthplace" placeholder="Chỗ ở hiện tại"
                                            class="form-control" />
                                    </div>
                                </div>
                               
                            </div>
                            <div class="form-actions center">
                                <button onclick="location.href='/customers'" type="button"
                                    class="btn btn-warning mr-1">
                                    <i class="ft-arrow-left"></i> Quay lại
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="ft-save"></i> Lưu lại
                                </button>
                            </div>
                        <form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%  include ./../emlements/script %>
</body>

</html>